@model Chef
<h1>Add a Chef!</h1>
    <div class="col">
        <form asp-action="AddChef" asp-controller="Home" method="POST">
            <div class="row">
                <div class="col-sm">
                    <label>First Name</label>
                    <div class="form-group row form-row">
                        <div class="col-sm-3">
                        <input asp-for="FirstName" class="form-control">
                        </div>
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <label>LastName</label>
                    <div class="form-group row form-row">
                        <div class="col-sm-3">
                        <input asp-for="LastName" class="form-control">
                        </div>
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <label>Date of Birth</label>
                    <div class="form-group row form-row">
                        <div class="col-sm-3">
                        <input asp-for="DateOfBirth" class="form-control" value="0">
                        </div>
                        <span asp-validation-for="DateOfBirth"></span>
                    </div>
                <div class="form-group row form-row">
                    <div class="col-sm-3">
                        <button type="submit" class="btn btn-secondary">Add Chef</button>
                    </div>
                </div>
                </div>
            </div>
        </form>
    </div>
