@model User
<div class="row mt-5">
    <div class="col">
        <h3>Registration</h3>
        <form asp-action="register" asp-controller="Home" method="POST">
            <span asp-validation-for="FirstName"></span>
            <div class="form-group row form-row">
                <label class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-3">
                <input asp-for="FirstName" class="form-control" placeholder="First Name">
                </div>
            </div>
            <span asp-validation-for="LastName"></span>
            <div class="form-group row form-row">
                <label class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-3">
                <input asp-for="LastName" class="form-control" placeholder="Last Name">
                </div>
            </div>
                <span asp-validation-for="Email"></span>
            <div class="form-group row form-row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-3">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                </div>
            </div>
                <span asp-validation-for="Password"></span>
            <div class="form-group row form-row">
                <label class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-3">
                <input asp-for="Password" class="form-control" placeholder="Password">
                </div>
            </div>
            <span asp-validation-for="ConfPassword"></span>
            <div class="form-group row form-row">
                <label class="col-sm-2 col-form-label">Confirm PW</label>
                <div class="col-sm-3">
                <input asp-for="ConfPassword" class="form-control" placeholder="Confirm Password">
                </div>
            </div>
            <div class="form-group row form-row">
                <div class="col-sm-10">
                    <div class="row">
                        <button type="submit" class="btn btn-secondary ml-2">Register</button>
                        <a class="text-dark ml-5 mt-2" asp-area="" asp-controller="Home" asp-action="Login">Already Registered?</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>