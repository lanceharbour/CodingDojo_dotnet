@model Dish
<h1>Edit @Model.Name</h1>
<hr width=50% class="float-left">
<div class="row mt-5">
    <div class="col">
        <form asp-action="UpdateDish" asp-controller="Home" method="POST">
            <div class="row">
                <div class="col-sm">
                    <input asp-for="DishId" type="hidden">
                    <input asp-for="CreatedAt" type="hidden">
                    <label>Chef's Name</label>
                    <div class="form-group row form-row">
                        <div class="col-sm-10">
                        <input asp-for="Chef" class="form-control">
                        </div>
                        <span asp-validation-for="Chef"></span>
                    </div>
                    <label>Name of Dish</label>
                    <div class="form-group row form-row">
                        <div class="col-sm-10">
                        <input asp-for="Name" class="form-control">
                        </div>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <label>Number of Calories</label>
                    <div class="form-group row form-row">
                        <div class="col-sm-10">
                        <input asp-for="Calories" class="form-control">
                        </div>
                        <span asp-validation-for="Calories"></span>
                    </div>
                </div>
                <div class="col-sm-3">
                    <p>Tastiness: <br><select class="form-control" style="width:80px" asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        </select>
                    </p>
                </div>
                <div class="col-sm">
                    <p>Description:</p>
                    <textarea asp-for="Description" class="form-control" rows="8" cols="60"></textarea>
                    <span asp-validation-for="Description"></span><br>
                    <div class="form-group row form-row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-secondary">Edit Dish</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>