@model Wedding
<div class="row mt-4">
    <div class="col-sm">
        <h1>Plan Your Wedding</h1>
    </div>
    <div class="col-sm mt-3">
        <span><a href="/dashboard">Dashboard</a> | <a href="/logout">Logout</a></span>
    </div>
</div>
<div class="col mt-5">
    <form asp-action="AddWedding" asp-controller="Home" method="POST">
        <span asp-validation-for="WedderOne"></span>
        <div class="form-group row form-row">
            <label class="col-sm-2 col-form-label">Wedder One</label>
            <div class="col-sm-3">
            <input asp-for="WedderOne" class="form-control">
            </div>
        </div>
        <span asp-validation-for="WedderTwo"></span>
        <div class="form-group row form-row">
            <label class="col-sm-2 col-form-label">Wedder Two</label>
            <div class="col-sm-3">
            <input asp-for="WedderTwo" class="form-control">
            </div>
        </div>
        <span asp-validation-for="WeddingDate"></span>
        <div class="form-group row form-row">
            <label class="col-sm-2 col-form-label">Wedding Date</label>
            <div class="col-sm-2">
            <input asp-for="WeddingDate" class="form-control" value="0">
            </div>
        </div>
        <span asp-validation-for="Address"></span>
        <div class="form-group row form-row">
            <label class="col-sm-2 col-form-label">Wedding Address</label>
            <div class="col-sm-3">
            <input asp-for="Address" class="form-control">
            </div>
        </div>
        <div class="form-group row form-row">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-secondary">Create</button>
            </div>
        </div>
    </form>
</div>
